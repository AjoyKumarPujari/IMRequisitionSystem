@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!--begin::Fonts-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />
    <!--end::Fonts-->
    <!--begin::Global Theme Styles(used by all pages)-->
    <link href="~/lib/assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/assets/css/style.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/assets/css/pages/login/login-4.css" rel="stylesheet" type="text/css" />
    <!--end::Global Theme Styles-->
    <link rel="shortcut icon" href="~/lib/assets/media/logos/favicon.ico" />
    <style>
       
        body {
            background-image: url('/lib/assets/media/svg/illustrations/RefinaryImage.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            max-width: 600px;
            margin: auto;
            padding: 50px 40px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .login-header img {
                max-height: 80px;
                margin-bottom: 20px;
            }

            .login-header h3 {
                font-size: 30px;
                font-weight: bold;
                color: #3F4254;
            }

        .form-control {
            background-color: #f3f6f9;
            border: none;
            border-radius: 5px;
            height: 50px;
            padding: 12px;
        }

            .form-control:focus {
                border-color: #3699ff;
                background-color: #fff;
            }

        .btn-primary {
            background-color: #3699ff;
            border: none;
            border-radius: 5px;
            padding: 15px;
            font-weight: bold;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .login-footer {
            text-align: center;
            margin-top: 25px;
        }

            .login-footer a {
                color: #3699ff;
                text-decoration: none;
            }

                .login-footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>

<body>
    <div class="login-container">
        <!--begin::Logo-->
        <div class="login-header">
            <img src="~/lib/assets/media/svg/illustrations/nrl_logo.jpg" alt="Logo" />
            <h3>Instrumentation Maintenance Requisition System</h3>
        </div>
        <!--end::Logo-->
        <!--begin::Form-->
        <form id="kt_login_form">
            <!-- LAN ID Input -->
            <div class="form-group mb-5">
                <label class="font-weight-bolder text-dark">User ID/ LAN ID</label>
                <input type="text" class="form-control" name="lanid" placeholder="Enter your LAN ID" autocomplete="off" required />
            </div>

            <!-- Password Input -->
            <div class="form-group mb-5">
                <label class="font-weight-bolder text-dark">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Enter your Password" autocomplete="off" required />
            </div>

            <!-- Sign In Button -->
            <div class="form-group text-center">
                <button type="button" class="btn btn-primary btn-block" onclick="GoToViewDetailsPage()">Sign In</button>
            </div>
        </form>
        <!--end::Form-->
        <!--begin::Footer-->
        <div class="login-footer">
            <p class="text-muted">Forgot your password? <a href="#">Reset it here</a></p>
        </div>
        <!--end::Footer-->
    </div>

    <!--begin::Javascript-->
    <script>
        function GoToViewDetailsPage() {
            window.location.href = '@Url.Action("AdminDeshboard", "Home")';
        }
    </script>
    <script src="~/lib/assets/plugins/global/plugins.bundle.js"></script>
    <script src="~/lib/assets/js/scripts.bundle.js"></script>
    <!--end::Javascript-->
</body>

</html>
