<script>
    $('#asset_Physical_Condition').select2({
        placeholder: "Select Asset Condition"
    });
</script>

<script>

    $('#healthCheckupDoneBy').datepicker({

        changeYear: true,

        todayHighlight: true,

        format: 'dd-mm-yyyy',

        autoclose: true,

        startDate: "-1d"

    }).on('changeDate', function (ev) {

        startDate = $('#healthCheckupDoneBy').val(),

            $(this).datepicker('hide');

    });

    var Global_Asset_Code_System;
    function ModalOpen(Asset_Code_System) {
        debugger;
        Global_Asset_Code_System = Asset_Code_System;
        /* console.log("Requisition No:", requisitionNo); */
        $('#returnRequest').modal('show');  // Open the modal
    }

    function HealthCheckupUpdate() {
        debugger;
        var btnID = "HealthCheckupupdatesubmit";
        var Asset_Code_System = Global_Asset_Code_System;
        var Health_Checkup_Remarks = $("#Health_Checkup_Remarks").val();
        var asset_Physical_Condition = $("#asset_Physical_Condition").val();





        $("#" + btnID).attr("disabled", true);
        $("#" + btnID).html("Please Wait..");

            var assetsModel = {};
        assetsModel.Health_Checkup_Remarks = Health_Checkup_Remarks;
        assetsModel.asset_Physical_Condition = asset_Physical_Condition;
        assetsModel.Asset_Code_System = Asset_Code_System;



        $.ajax({
            url: '@Url.Action("HealthCheckUpUpdate", "Asset")',
            type: 'POST',
            data: { assetsModel: assetsModel },
            success: function (data) {

            if (data.redirectUrl != '') {
            location.href = data.redirectUrl;
            } else {
            $("#" + btnID).attr("disabled", false);
            $("#" + btnID).html("Submit");
            }
            },
            error: function (jqXHR, textStatus, errorThrown) {

            $("#" + btnID).attr("disabled", false);
            $("#" + btnID).html("Submit");

            toastr.error("Failed to Allocate. Try again.");
            }
            });
            }


</script>




